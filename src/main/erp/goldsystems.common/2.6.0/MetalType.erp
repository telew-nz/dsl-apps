enum MetalType(currency: Currency?, purityThreshold: Dec[5]?){
  case Gold(currency = XAU, purityThreshold = 0.995) {
    background = "#fe8"
  }
  case Silver(currency = XAG, purityThreshold = 0.999) {
    background = "#bbb"
  }
  case Platinum(currency = XPT, purityThreshold = 0.99) {
    background = "#eee"
  }
  case Palladium(currency = null, purityThreshold = 0) {
    background = "#fae"
  }
}